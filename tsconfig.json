{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
        "*": ["./@types/*"]
    },
    "sourceMap": true,
    "strictFunctionTypes": true,
    "strictNullChecks": false,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/link-lib/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
